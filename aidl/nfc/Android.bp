cc_library_shared {
    name: "nfc_nci_slsi",
    defaults: ["hidl_defaults"],
    proprietary: true,

    cflags: [
        "-DBUILDCFG=1",
        "-DANDROID",
        "-DNFC_HAL_TARGET=TRUE",
        "-DNFC_RW_ONLY=TRUE",
        "-DNFC_SEC_NOT_OPEN_INCLUDED=TRUE",
    ],

    srcs: [
        "halimpl/osi/*.cc",
        "halimpl/src/*.cc",
        "halimpl/src/*.cpp",
    ],

    local_include_dirs: [
        "halimpl/include",
        "halimpl/osi",
    ],
    export_include_dirs: [
        "halimpl/include",
        "halimpl/osi",
    ],

    shared_libs: [
        "android.hardware.nfc-V1-ndk",
        "libbase",
        "libcutils",
        "libhardware",
        "libhardware_legacy",
        "libhidlbase",
        "liblog",
        "libutils",
        "libcrypto",
    ],
}

cc_binary {
    name: "android.hardware.nfc-service.samsung",
    proprietary: true,
    init_rc: ["nfc-service-samsung.rc"],
    vintf_fragments: ["nfc-service-samsung.xml"],
    relative_install_path: "hw",
    srcs: [
        "SecNfcService.cpp",
        "SecNfc.cpp",
        "SecNfcExtns.cpp"
    ],
    cflags: [
        "-Wall",
        "-Werror",
        "-Wextra",
    ],
    local_include_dirs: [
        "halimpl/include",
        "halimpl/osi",
    ],

    shared_libs: [
        "nfc_nci_slsi",
        "android.hardware.nfc-V1-ndk",
        "libbase",
        "liblog",
        "libutils",
        "libbinder_ndk",
        "libhardware",
    ],
}
