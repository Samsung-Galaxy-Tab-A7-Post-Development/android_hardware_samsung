cc_library_static {
    name: "libudfps_extension.samsung",
    srcs: ["UdfpsExtension.cpp"],
    cflags: select(soong_config_variable("samsung_udfps", "udfps_zorder"), {
        any @ zorder: ["-DFOD_PRESSED_LAYER_ZORDER=" + zorder],
        default: [],
    }) + select(soong_config_variable("samsung_udfps", "dim_layer_zorder"), {
        any @ layer_order: ["-DFOD_DIM_LAYER_ZORDER=" + layer_order],
        default: [],
    }),
    include_dirs: [
        "frameworks/native/services/surfaceflinger/CompositionEngine/include",
    ],
}
